<% provide(:title, (t :log_in)) %>
<h1><%= t :log_in %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>

      <%= f.label (t :email) %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label (t :password) %>
      <%= link_to "(#{t :forgot_password})", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label (t :remember_me), class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t :remember_me %></span>
      <% end %>

      <%= f.submit (t :log_in), class: "btn btn-primary" %>
    <% end %>

    <% if I18n.locale == :en %>
        <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    <% else %>
        <p>新規ユーザーの場合は，<%= link_to "こちら", signup_path %>。</p>
    <% end %>
  </div>
</div>
